<%- include ("../partials/header") %>
<div class="container pop">
  <form action="/admin/product" method="post">
    <div class="form-group row">
      <label for="name" class="col-sm-1 lab col-form-label">Name</label>
      <div class="col-sm-4">
        <input type="text"  id="name" name="name">
      </div>
    </div>
    <div class="form-group row">
      <label for="image" class="col-sm-1 lab col-form-label">Image</label>
      <div class="col-sm-4">
        <input type="text"  id="image" name="image">
      </div>
    </div>
    <div class="form-group row">
      <label for="price" class="col-sm-1 lab col-form-label">Price</label>
      <div class="col-sm-4">
        <input type="text"  id="price" name="price">
      </div>
    </div>
    
    <div class="form-group row">
      <label for="description" class="col-sm-1 lab col-form-label">Description</label>
      <div class="col-sm-4">
        <input type="text"  id="description" name="description">
      </div>
    </div>
   <button class="btn btn-info">Submit</button>
</form>
</div>


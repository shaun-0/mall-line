<%- include ("../partials/header") %>

<div class="container product-container">
  <div class="empt centre-it">
    <h1 class="float-center"><%=products.length%> results found</h1>
  </div>
  
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% products.forEach(function(product){ %>
      <!-- <a href="/product/<%= product._id %>"> -->

        <a href="/product/<%= product._id %>" class="custom-card">

        
    <div class=" col-md-3 col-sm-4 col-6 product-card">
      <div class="thumbnail ">
        <a href="/product/<%= product._id %>">
          <img class="product-img" src="<%= product.image %>" SameSite=None alt="img">
        </a>
      </div>
      <div  class="caption">
        <h6 id="product-title">
          <a href="/product/<%= product._id %>" class="custom-card">
            <%= product.name %>
          </a>
        </h6>
        <div class="bottom-row">
          <span id="price-tag">
            â‚¹ <%= product.price %>
          </span>
          <span id="rating-tag">
            <span id="rating" ><strong><%= product.rating %></strong>
              <svg style="
              margin-bottom: 3px;" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill " fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
              </svg>
            </span>
             (<%= product.reviews.length %>)
          </span>
        </div>
      </div>
      <!-- <a href="/product/<%= product._id %>" class="stretched-link"></a> -->
    </div>
 
    <% }); %>
  </div>
</div>

<%- include ("../partials/footer") %>

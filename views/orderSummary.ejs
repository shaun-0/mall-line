<%- include ("./partials/header") %>

<div class="container con set-top-margin">
  <h1 style="text-align: center;">Order Summary</h1>
  <h5><strong>Order ID - </strong><%= order._id %></h5>
  <br>
  <div class="row">
    <div class="col-2 col-sm-2">
      <span>S.no</span>
    </div>
    <div class="col-8 col-sm-8">
      <span>Products</span>
    </div>
    <div class="col-2 col-sm-2">
      <span>Qty.</span>
    </div>
  </div>
  <hr>
  <% order.products.forEach(function(prod,count){ %>
    <div class="row">
      <div class="col-2 col-sm-2">
        <span><%= count+1 %></span>
      </div>
      <div class="col-8 col-sm-8">
        <span><%= prod.product.name %> </span>
      </div>
      <div class="col-2 col-sm-2">
        <span><%= prod.count %></span>
      </div>
    </div>
  <% }) %>
  <hr>
  <h5 id="total-a">Total - â‚¹ <%= order.amount %></h5>

  <div class="container">
    <form action="/order/payment" method="post">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" required="true" name="email" value="<%= user.email %>">
          </div>
          <div class="form-group col-md-6">
            <label for="phone">Phone Number</label>
            <input type="number" class="form-control" id="phone" required="true" name="phone" value="<%= user.contactNumber %>">   
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Address</label>
          <input type="text" class="form-control" id="inputAddress" name="address" required="true" value="<%= user.address %>">
        </div>
        
        <button type="submit" class="btn btn-primary">Proceed to pay</button>
      </form>
    
  </div>
</div>
<%- include ("./partials/footer") %>
